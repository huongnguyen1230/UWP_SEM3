<Page
    x:Class="PRACTICE2.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:PRACTICE2"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Grid Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

       
        <StackPanel x:ConnectionId='2' x:Name="login" Grid.Row="1">

            <TextBox PlaceholderText="Email" Width="300" Background="Beige" Margin="0,50,0,0"></TextBox>

            <TextBox PlaceholderText="Password" Width="300" Background="Beige" Margin="0,10,0,0"></TextBox>

            <RelativePanel HorizontalAlignment="Center" Margin="0,20,0,0">
                <Button x:ConnectionId='3' x:Name="loginbtn" Content="Login"               Background="LightBlue"></Button>
            </RelativePanel>

        </StackPanel>

    </Grid>
</Page>

